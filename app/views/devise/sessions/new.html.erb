

<div class="container-fluid-pink" id="login-bg">
  <%= image_tag("bg3.png", :class => "bg_logo") %>
  <div class="row-high" style="z-index:995;">
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-4"></div>
        <div class="col-md-4 head_name">Log in</div>
        <div class="col-md-4"></div>
      </div>
    </div>
    
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <!--<div class="form_div">-->
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-4 col-sm-2"></div>
          <div class="col-md-4 col-sm-8 form_text">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true %><br/><br/>
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off" %></br>
            
            <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, :class => 'label_small' %>
            <% end -%><br/><br/>
            
            <%= f.submit "Log in", :class => 'submit_bt' %><br/><br/>
            <%= render "devise/shared/links" %>   
          </div>
          <div class="col-md-4 col-sm-2"></div>
        </div>
      </div>
    <!--</div>-->
    <% end %><!-- form 끝 -->
 
    
      <div class="row">
        <div class="col-md-12 ">
          <div class="col-md-4 col-sm-2"></div>
          <div class="col-md-4 col-sm-8 form_text">
            <div class="fb-like"
              data-share="true"
              data-width="450"
              data-show-faces="true">
            </div>
          </div>
          <div class="col-md-4 col-sm-2"></div>
        </div>
      </div>
  </div><!-- row-high -->
</div>


<!-- footer -->
<div class="row">
  <div class="col-md-12">
    <div class="col-md-4"></div>
    <div class="col-md-4 foot_t">
    <a href="#" class="top"><div class="col-md-4"><span class="glyphicon glyphicon-chevron-up" aria-hidden="true">&nbsp;top</span></div></a>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>
<!-- footer -->  

<script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script>
      $( document ).ready( function() {
        $( window ).scroll( function() {
          if ( $( this ).scrollTop() > 80 ) {
            $( '.top' ).fadeIn();
          } else {
            $( '.top' ).fadeOut();
          }
        } );
        $( '.top' ).click( function() {
          $( 'html, body' ).animate( { scrollTop : 0 }, 400 );
          return false;
        } );
      } );
    </script>

<meta name="viewport" content="initial-scale=1.0; maximum-scale=1.0; minimum-scale=1.0; user-scalable=no;" /> 
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/> 






